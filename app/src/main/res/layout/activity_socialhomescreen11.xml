<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".socialhomescreen11">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topmostquarter">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/canceltext"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textStyle="bold"
            android:id="@+id/editprofiletext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp" />

        <!-- Changed to ShapeableImageView -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileicon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/editprofiletext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_login_splash"
            app:shapeAppearanceOverlay="@style/CircleImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileicon"
            android:text="Change Profile Photo"
            android:textStyle="bold"
            android:id="@+id/changeprofilephoto"
            android:textColor="@color/mainpagesmd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/nametext2"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/usernameedittext"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nametext2"
            android:layout_marginStart="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/nametext4"
            android:layout_marginStart="10dp" />

        <EditText
            android:layout_width="300dp"
            android:id="@+id/bioedittext"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nametext4"
            android:layout_marginStart="54dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000"
            android:layout_below="@+id/bioedittext"
            android:layout_marginTop="20dp" />
    </RelativeLayout>

    <Button
        android:layout_width="140dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/updatebtn"
        android:layout_gravity="center_horizontal" />
</LinearLayout>