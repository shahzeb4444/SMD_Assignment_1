<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_splash"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/secondmain">

        <FrameLayout
            android:id="@+id/profile_container"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:background="@drawable/whitecircle"
            android:clickable="false"
            android:focusable="false"
            android:padding="0dp">

            <ImageView
                android:id="@+id/profilepic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/whitecircle"
                android:background="@drawable/whitecircle"
                android:adjustViewBounds="true"
                android:visibility="visible"
                android:clipToOutline="true"/>
        </FrameLayout>

        <TextView
            android:id="@+id/sociallytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Socially"
            android:layout_above="@id/profile_container"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/osandemedium"
            android:textColor="@color/mainpagesmd"
            android:textSize="55sp"/>

        <TextView
            android:id="@+id/profilename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jacob_w"
            android:layout_below="@id/profile_container"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/loginbutton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mainpagesmd"
            android:text="Log in"
            android:textSize="15sp"
            android:layout_below="@id/profilename"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/switchaccounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch accounts"
            android:textColor="@color/mainpagesmd"
            android:layout_below="@id/loginbutton"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="25dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000"
            android:layout_above="@id/logout"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout from this account"
            android:textColor="@color/mainpagesmd"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:textSize="13sp"/>
    </RelativeLayout>
</ScrollView>
