<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_splash">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/secondmain"


        >
        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/profilepic"
            android:layout_height="wrap_content"
            android:src="@drawable/profile_login_splash"
            android:layout_centerInParent="true"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Socially"
            android:id="@+id/sociallytext"
            android:layout_above="@+id/profilepic"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/osandemedium"
            android:textColor="@color/mainpagesmd"
            android:textSize="55sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jacob_w"
            android:layout_below="@+id/profilepic"
            android:id="@+id/profilename"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            />
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/loginbutton"
            android:backgroundTint="@color/mainpagesmd"
            android:text="Log in"
            android:textSize="15sp"
            android:layout_below="@+id/profilename"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:id="@+id/switchaccounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch accounts"
            android:textColor="@color/mainpagesmd"
            android:layout_below="@+id/loginbutton"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="25dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33000000"
            android:layout_above="@+id/donthaveaccount"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="@color/mainpagesmd"
            android:id="@+id/donthaveaccount"
            android:layout_marginStart="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up."
            android:textColor="@color/mainpagesmd"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/donthaveaccount"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:textSize="13sp"
            android:layout_marginLeft="7dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brownbottomline"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>

</ScrollView>