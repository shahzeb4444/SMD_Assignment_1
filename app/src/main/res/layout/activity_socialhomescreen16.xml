<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".socialhomescreen16">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tophalf"

        >
        <TextView
            android:id="@+id/leftarrowlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/mainpagesmd"
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:id="@+id/jacobtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recents"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:textColor="@color/mainpagesmd"
            android:textSize="15sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/downarrowred"
            android:layout_toRightOf="@id/jacobtext"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="33dp"
            />
        <TextView
            android:id="@+id/pluslogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textStyle="bold"
            android:textColor="@color/mainpagesmd"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="20dp"

            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/mainphoto"
            android:src="@drawable/personblackshirtphoto"
            android:layout_below="@+id/pluslogo"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boomerangicon"
            android:layout_below="@+id/pluslogo"
            android:id="@+id/boomerang"
            android:layout_marginTop="360dp"
            android:layout_marginStart="130dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/combinephotosicon"
            android:layout_toRightOf="@+id/boomerang"
            android:layout_below="@+id/pluslogo"
            android:id="@+id/combinephotos"
            android:layout_marginTop="360dp"
            android:layout_marginStart="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/helperrectangle"
            android:layout_toRightOf="@+id/combinephotos"
            android:layout_below="@+id/pluslogo"
            android:id="@+id/selectmultiple"
            android:layout_marginTop="360dp"
            android:layout_marginStart="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/helpericon2"
            android:layout_toRightOf="@+id/combinephotos"
            android:layout_below="@+id/pluslogo"
            android:id="@+id/helpericon2"
            android:layout_marginTop="367dp"
            android:layout_marginStart="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SELECT MULTIPLE"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:layout_below="@+id/pluslogo"
            android:layout_marginTop="368dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/helpericon2"

            />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="265dp"

        >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"

            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:scaleType="centerCrop"
                android:src="@drawable/helperphoto3"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:scaleType="centerCrop"
                android:src="@drawable/h1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:scaleType="centerCrop"
                android:src="@drawable/h2"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="3"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:scaleType="centerCrop"
                android:src="@drawable/h3"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:scaleType="centerCrop"
                android:src="@drawable/h4"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:scaleType="centerCrop"
                android:src="@drawable/h5"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:scaleType="centerCrop"
                android:src="@drawable/h7"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="3"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:scaleType="centerCrop"
                android:src="@drawable/h8"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:scaleType="centerCrop"
                android:src="@drawable/h9"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:scaleType="centerCrop"
                android:src="@drawable/h10"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:scaleType="centerCrop"
                android:src="@drawable/h11"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="3"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:scaleType="centerCrop"
                android:src="@drawable/h12"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:scaleType="centerCrop"
                android:src="@drawable/h13"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_row="3"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:scaleType="centerCrop"
                android:src="@drawable/h12"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_row="3"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:scaleType="centerCrop"
                android:src="@drawable/h4"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_column="3"
                android:layout_row="3"
                android:layout_rowSpan="1"
                android:layout_columnSpan="1"
                android:scaleType="centerCrop"
                android:src="@drawable/h5"/>


        </GridLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Library"
            android:textColor="@color/mainpagesmd"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:textSize="17sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo"
            android:textColor="@color/mainpagesmd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textSize="17sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video"
            android:id="@+id/video"
            android:textColor="@color/mainpagesmd"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="40dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brownbottomline"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/video"
            android:layout_marginTop="40dp"
            />


    </RelativeLayout>


</LinearLayout>