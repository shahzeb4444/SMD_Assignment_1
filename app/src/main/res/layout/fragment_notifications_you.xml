<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationsYouFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/followingtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Following"
            android:layout_marginTop="50dp"
            android:layout_marginStart="50dp"
            android:textStyle="bold"
            android:textColor="@color/mainpagesmd"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/Youtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You"
            android:layout_marginTop="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="75dp"
            android:textStyle="bold"
            android:textColor="@color/mainpagesmd"
            android:textSize="20sp"/>
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:background="@color/mainpagesmd"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/Youtext"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Section: Follow Requests -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/followrequest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Follow Requests"
                    android:textColor="@color/mainpagesmd"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33000000"
                    android:layout_below="@+id/followrequest"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFollowRequests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="12dp"/>

            <!-- Section: Recent successful follows -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <TextView
                    android:id="@+id/recentheader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent"
                    android:textColor="@color/mainpagesmd"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#33000000"
                    android:layout_below="@+id/recentheader"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFollowActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="24dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
